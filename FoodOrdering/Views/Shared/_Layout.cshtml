@if (Session["count"] == null)
{
    Session["count"] = 0;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
        
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Yummy Yummy", "Index", "FrantEnd", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse pull-right" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "FrantEnd", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Order Online", "Index", "Delivery", new { area = "" }, null)</li>
                   
                    <li>@Html.ActionLink("Menu", "Index", "Menu", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Login", "LoginAdmin", "Login", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Logout", "Index", "FrantEnd", new { area = "" }, null)</li>

                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li>
                        <a href="@Url.Action("Index","Orderingcart")">
                            <span class="glyphicon glyphicon-cutlery" style="font-size:25px;color:white;"></span>&nbsp;&nbsp; Order<span class="badge">@Session["count"]</span>

                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <h2 style="color:purple;background-color:goldenrod;font-family:'Goudy Stout';font-size:25px;"><img src="@Url.Content("~/Image/logo4.PNG")" class="img-thumbnail" style="width:200px;height:200px;" />&nbsp;&nbsp;&nbsp; Yummy Yummy Food House</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.Content("~/Image/slidderfood1.PNG")" alt="Korea Style" style="width:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Image/slidderfood2.PNG")" alt="Korea Style" style="width:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Image/slidderfood3.PNG")" alt="Korea Style" style="width:100%;">
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Image/slidderfood4.PNG")" alt="Korea Style" style="width:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Image/slidderfood5.PNG")" alt="Korea Style" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container body-content">




        @RenderBody()

        <div class="container">
            <section style="height:80px;"></section>
            <div class="row" style="text-align:center;">
                <h2></h2>
            </div>
            <!----------- Footer ------------>
            <footer class="footer-bs">
                <div class="row">
                    <div class="col-md-3 footer-brand animated fadeInLeft">
                        <h2><img src="@Url.Content("~/Image/logo4.PNG")" class="img-thumbnail" style="width:200px;height:200px;" /></h2>
                        <p style="color:saddlebrown;">Yummy Yummy is a good restaurant.Everyone can eat delicious cake and drink juice,code and coffee.Customer can eat korean food.And also eat breakfast,lunch and dinner.</p>
                        <p>© 2014 BS3 UI Kit, All rights reserved</p>
                    </div>
                    <div class="col-md-4 footer-nav animated fadeInUp">
                        <h4>Menu —</h4>
                        <div class="col-md-6">
                            <ul class="pages">
                                <li><a href="#">Breakfast</a></li>
                                <li><a href="#">Lunch</a></li>
                                <li><a href="#">Dinner</a></li>
                                <li><a href="#">Korean food</a></li>
                                <li><a href="#">Cake</a></li>
                                <li><a href="#">Dink</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Contacts</a></li>
                                <li><a href="#">Terms & Condition</a></li>
                                <li><a href="#">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2 footer-social animated fadeInDown">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Instagram</a></li>
                            <li><a href="#">RSS</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 footer-ns animated fadeInRight">
                        <h4 style="color:indigo;">Yummy Yummy</h4>
                        <p>A Restaurant for your family and friend.</p>
                        <p>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-envelope"></span></button>
                                </span>
                            </div><!-- /input-group -->
                        </p>
                    </div>
                </div>
            </footer>
            <section style="text-align:center; margin:10px auto;"><p>Designed by <a href="http://northerncity.net">Yummy Yummy</a></p></section>

        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>